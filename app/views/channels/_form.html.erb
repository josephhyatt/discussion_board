<%= simple_form_for(@channel) do |f| %>
  <%= f.error_notification %>

 <div class="field">
   <div class="control">
    <!-- creating input for the channel form, passing in an input_html atribute which passes any html straight to the input
    with a input type (class: 'input') with no wrapper (which simple_form generates a wrapper
    div around your label by default)  -->
     <%= f.input :channel, input_html: { class: 'input' }, wrapper: false, label_html: { class: 'label' } %>
   </div>
 </div>
<!-- creating a submit button with label 'Leave a reply' with bootstrap class -->
 <%= f.button :submit, class: 'button is-primary has-text-black' %>

<% end %>
