<h1 class="title is-2 has-text-grey">Editing Reply</h1>
<!-- passing in @discussion @reply which gets the specific
i.d. through controllers/replies_controller.rb
edit method for the reply being edited -->
<%= simple_form_for([@discussion, @reply]) do |f| %>
  <!-- one field for the reply -->
  <div class="field">
    <div class="control">
      <!-- creating input for reply, passing in an input_html atribute which passes any html straight to the input
      with a input type 'textarea' with no wrapper (which simple_form generates a wrapper
      div around your label by default)  -->
      <%= f.input :reply, input_html: { class: 'textarea' }, wrapper: false, label_html: { class: 'label' } %>
    </div>
  </div>
  <!-- creating a submit button with label 'Update reply' with bootstrap class -->
  <%= f.button :submit, 'Update reply', class:'button is-info' %>
<% end %>
